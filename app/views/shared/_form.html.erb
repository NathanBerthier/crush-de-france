<%= form_for(@city) do |f| %>
  <%= render "devise/shared/error_messages", resource: @city %>
  <div class='field'>
    <%= f.label 'Nom de la ville' %>
    <%= f.text_field :name, placeholder: 'Bourg en Bresse' %>
  </div>
  <div class='field'>
    <%= f.label 'Nom court' %>
    <%= f.text_field :short_name, placeholder: 'Bourg' %>
  </div>
  <div class='field'>
    <%= f.label "Heure d'upload" %>
    <%= f.select :upload_time, (0..23).to_a %>
  </div>
  <div class='actions'>
    <%= f.submit "Enregistrer" %>
  </div>
<% end %>
