<div class='register'>
  <h2>Connexion</h2>
  <p>Entrez vos identifiants pour vous connecter.</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label 'E-mail' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label 'Mot de passe' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="register-box">
        <%= f.check_box :remember_me %>
        <%= f.label 'Se souvenir de moi' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Se connecter" %>
    </div>
  <% end %>

  <div class='register-login'>
    <p>Pas encore de compte ?</p>
    <%= link_to "Créer un compte", new_registration_path(resource_name) %>
  </div>

  <div class='register-login'>
    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
  </div>
</div>
